<% layout('layout/boilerplate') -%>

    <div class="login">
        <div class="login-left-side">
            <div></div>

            <div class="login-left-side-content">
                <div></div>
                <div>
                    <p><i class="fa-solid fa-magnifying-glass"></i>Find and explore the schools people post</p>
                    <p><i class="fa-solid fa-share"></i>Share the school you know</p>
                    <p><i class="fa-solid fa-comment"></i>Comment to share your experience at the school you know</p>
                </div>
                <div></div>

            </div>
            <div></div>
        </div>

        <div class="login-right-side">
            <div></div>
            <div class="login-right-side-content">
                <div></div>
                <div>
                    <form action="/login" method="post" class="needs-validation mt-3" novalidate>
                        <div class="mb-3">
                            <label for="name" class="form-label">User Name</label>
                            <input type="text" class="form-control user-name" id="name" name="username" placeholder="User name" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control pass-word" id="password" name="password" placeholder="Password"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
        
                        <button class="btn btn-success login-button">Login</button><br>
                        <a class="btn btn-info register-button" href="/register">Register</a>
                    </form>
                </div>
                <div></div>
                
            </div>
            <div></div>
            
        </div>


    </div>